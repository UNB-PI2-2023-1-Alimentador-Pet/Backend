{
    "openapi": "3.0.0",
    "info": {
      "title": "MiAuFeeder",
      "description": "Api alimentador de pet",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3333"
      }
    ],
    "paths": {
      "/users/signup": {
        "post": {
          "summary": "Registrar usuario",
          "tags": ["Usuarios"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json":{
                "schema": {
                  "$ref": "#/components/schemas/Usuario"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "$ref": "#/components/schemas/UsuarioCriado"
                  }
                }
              }
            },
            "409": {
              "description": "Details are not correct"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/users/login": {
        "post": {
          "summary": "Login",
          "tags": ["Usuarios"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json":{
                "schema": {
                  "$ref": "#/components/schemas/Login"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "$ref": "#/components/schemas/Login"
                  }
                }
              }
            },
            "401": {
              "description": "Autentication Failed"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Usuario": {
          "type": "object",
          "properties": {
            "nome": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "senha": {
              "type": "string"
            }
          }
        },
        "UsuarioCriado": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "nome": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "senha": {
              "type": "string"
            },
            "userHash": {
              "type": "string"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            },
            "passwordresettoken": {
              "type": "null"
            },
            "passwordresetexpires": {
              "type": "null"
            }
          }
        },
        "Login": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "senha": {
              "type": "string"
            }
          }
        }
      }
    },
    "security": [
      {
        "bearerAuth": []
      }
    ]
  }
  